<UserControl x:Class="WpfTutorial.Support.PlayerIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTutorial.Support"
             mc:Ignorable="d" 
             d:DesignHeight="50" Width="233" >

    <Grid  Margin="0,0,84,-85">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Background="#FF1212DE" Foreground="#FFF7EFEF" Height="30" Width="232"   Content="{Binding Path=PlayerName, Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Label.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Activate Player" Click="MenuItem_Click"/>
                    <MenuItem Header="Deactivate Player" Click="MenuItem_Click_1"/>
                    <MenuItem Header="Sit me here" Click="MenuItem_Click_2"/>
                    <MenuItem Header="Zakis Ikon" Click="MenuItem_Click_3"/>
                </ContextMenu>
            </Label.ContextMenu>
        </Label>
    </Grid>
</UserControl>
