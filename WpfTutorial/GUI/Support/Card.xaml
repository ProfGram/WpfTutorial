<UserControl x:Class="WpfTutorial.GUI.Support.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTutorial.GUI.Support"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="50">
    <Grid>
        <Image Source="{Binding CardUri}" HorizontalAlignment="Left" Height="70" Margin="0,0,0,-0.286" VerticalAlignment="Top" Width="50" Stretch="Fill">
        </Image>
    </Grid>
    
</UserControl>
